// -*- mode: jsonc -*-
{
  "position": "bottom",
  "height": 48,
  "spacing": 0,
  "mode": "dock",
  "exclusive": true,
  "reload_style_on_change": true,
  "modules-left": [
    "image#start",
    "hyprland/workspaces",
    // "hyprland/mode",
    // "hyprland/scratchpad",
    "wlr/taskbar"
  ],
  //"modules-center": [
  //  "hyprland/window"
  //],
  "modules-right": [
    "tray",
    "hyprland/language",
    //"network",
    //"bluetooth",
    "clock",
    "pulseaudio",
    "custom/wlsunset",
    "custom/desktop"
    //"mpd",
    //"idle_inhibitor",
